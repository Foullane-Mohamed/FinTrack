<!DOCTYPE html>
<html>
  <head>
    <title>Add Transaction</title>
  </head>
  <body>
    <h1>Add Transaction</h1>
    <a href="/transactions">‚Üê Back</a>

    <form method="POST">
      <p>Category: <input type="text" name="category" required /></p>
      <p>
        Type:
        <select name="type" required>
          <option value="">Select</option>
          <option value="income">Income</option>
          <option value="expense">Expense</option>
        </select>
      </p>
      <p>Amount: <input type="number" name="amount" step="0.01" required /></p>
      <p>Date: <input type="date" name="date" required /></p>
      <p>
        <button type="submit">Add</button>
        <a href="/transactions">Cancel</a>
      </p>
    </form>

    <script>
      document.querySelector('input[name="date"]').value = new Date()
        .toISOString()
        .split("T")[0];
    </script>
  </body>
</html>
