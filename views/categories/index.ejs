<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories - FinTrack</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100 min-h-screen font-sans">
    <nav class="bg-blue-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-xl font-bold">FinTrack</h1>
        <div class="flex items-center space-x-4">
          <a
            href="/auth/logout"
            class="bg-red-500 hover:bg-red-700 px-3 py-1 rounded"
            >Logout</a
          >
        </div>
      </div>
    </nav>

    <div class="container mx-auto mt-8 px-4">
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">
          Category Management
        </h1>

        <div class="mb-6 pb-4 border-b border-gray-200">
          <nav class="flex space-x-4">
            <a
              href="/auth/dashboard"
              class="text-blue-600 hover:text-blue-800 px-3 py-1 rounded hover:bg-blue-50"
              >Dashboard</a
            >
            <a
              href="/categories/create"
              class="text-blue-600 hover:text-blue-800 px-3 py-1 rounded hover:bg-blue-50"
              >Create New Category</a
            >
            <a
              href="/budgets"
              class="text-blue-600 hover:text-blue-800 px-3 py-1 rounded hover:bg-blue-50"
              >Manage Budgets</a
            >
          </nav>
        </div>

        <h2 class="text-2xl font-semibold text-gray-800 mb-6">
          Your Categories
        </h2>

        <% if (categories && categories.length > 0) { %>
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          <% categories.forEach(category => { %>
          <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
            <div class="flex justify-between items-start mb-4">
              <h3 class="text-lg font-semibold text-gray-900">
                <%= category.name %>
              </h3>
              <span class="text-sm text-gray-500">ID: <%= category.id %></span>
            </div>

            <!-- Actions -->
            <div class="flex space-x-2 mb-2">
              <button
                type="button"
                onclick="showEditForm(<%= category.id %>)"
                class="flex-1 bg-yellow-500 hover:bg-yellow-600 text-white text-sm px-3 py-2 rounded"
              >
                Edit
              </button>
            </div>

            <form action="/categories/delete/<%= category.id %>" method="POST">
              <button
                type="submit"
                onclick="return confirm('Are you sure you want to delete this category? This will also delete all associated budgets and transactions.')"
                class="w-full bg-red-500 hover:bg-red-600 text-white text-sm px-3 py-2 rounded"
              >
                Delete
              </button>
            </form>

            <!-- Hidden Edit Form -->
            <div
              id="edit-form-<%= category.id %>"
              class="hidden mt-4 p-4 border border-gray-200 rounded"
            >
              <form
                action="/categories/update/<%= category.id %>"
                method="POST"
                class="space-y-3"
              >
                <input
                  type="text"
                  name="name"
                  value="<%= category.name %>"
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                  placeholder="Category Name"
                />
                <div class="flex space-x-2">
                  <button
                    type="submit"
                    class="flex-1 bg-green-500 hover:bg-green-600 text-white text-sm px-3 py-2 rounded"
                  >
                    Update
                  </button>
                  <button
                    type="button"
                    
                    onclick="showEditForm('<%= category.id %>')"

                    class="bg-gray-500 hover:bg-gray-600 text-white text-sm px-3 py-2 rounded"
                  >
                    Cancel
                  </button>
                </div>
              </form>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No categories created yet.</p>
      
        </div>
        <% } %>
      </div>
    </div>

    <script>
      function showEditForm(categoryId) {
        document
          .getElementById(`edit-form-${categoryId}`)
          .classList.remove("hidden");
      }

      function hideEditForm(categoryId) {
        document
          .getElementById(`edit-form-${categoryId}`)
          .classList.add("hidden");
      }
    </script>
  </body>
</html>
