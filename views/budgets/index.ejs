<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Budgets - FinTrack</title>
  <link href="/css/output.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 min-h-screen font-sans">
  <nav class="bg-blue-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-xl font-bold">FinTrack</h1>
      <div class="flex items-center space-x-4">
        <a href="/auth/logout" class="bg-red-500 hover:bg-red-700 px-3 py-1 rounded">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mx-auto mt-8 px-4">
    <div class="max-w-6xl mx-auto bg-white rounded-lg shadow-md p-6">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Budget Management</h1>

      <div class="mb-6 pb-4 border-b border-gray-200">
        <nav class="flex space-x-4">
          <a href="/auth/dashboard" class="text-blue-600 hover:text-blue-800 px-3 py-1 rounded hover:bg-blue-50">Dashboard</a>
          <a href="/budgets/create" class="text-blue-600 hover:text-blue-800 px-3 py-1 rounded hover:bg-blue-50">Create New Budget</a>
          <a href="/auth/logout" class="text-blue-600 hover:text-blue-800 px-3 py-1 rounded hover:bg-blue-50">Logout</a>
        </nav>
      </div>

      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Your Budgets</h2>

      <% if (budgets && budgets.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Category</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Month</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% budgets.forEach(budget => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= budget.Category ? budget.Category.name : 'Unknown Category' %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">$<%= budget.limitAmount ? budget.limitAmount.toFixed(2) : '0.00' %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= budget.month || 'All months' %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <form action="/budgets/update/<%= budget.id %>" method="POST" class="inline-flex items-center space-x-2">
                    <select name="CategoryId" required class="w-32 px-2 py-1 text-xs border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500">
                      <option value="<%= budget.CategoryId %>"><%= budget.Category ? budget.Category.name : 'Select Category' %></option>
                    </select>
                    <input type="number" step="0.01" name="limitAmount" value="<%= budget.limitAmount %>" required 
                           class="w-20 px-2 py-1 text-xs border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500" />
                    <select name="month" class="w-24 px-2 py-1 text-xs border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500">
                      <option value="">Month</option>
                      <option value="January" <%= budget.month === 'January' ? 'selected' : '' %>>Jan</option>
                      <option value="February" <%= budget.month === 'February' ? 'selected' : '' %>>Feb</option>
                      <option value="March" <%= budget.month === 'March' ? 'selected' : '' %>>Mar</option>
                      <option value="April" <%= budget.month === 'April' ? 'selected' : '' %>>Apr</option>
                      <option value="May" <%= budget.month === 'May' ? 'selected' : '' %>>May</option>
                      <option value="June" <%= budget.month === 'June' ? 'selected' : '' %>>Jun</option>
                      <option value="July" <%= budget.month === 'July' ? 'selected' : '' %>>Jul</option>
                      <option value="August" <%= budget.month === 'August' ? 'selected' : '' %>>Aug</option>
                      <option value="September" <%= budget.month === 'September' ? 'selected' : '' %>>Sep</option>
                      <option value="October" <%= budget.month === 'October' ? 'selected' : '' %>>Oct</option>
                      <option value="November" <%= budget.month === 'November' ? 'selected' : '' %>>Nov</option>
                      <option value="December" <%= budget.month === 'December' ? 'selected' : '' %>>Dec</option>
                    </select>
                    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white text-xs px-3 py-1 rounded">Update</button>
                  </form>
                  <form action="/budgets/delete/<%= budget.id %>" method="POST" class="inline ml-2">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this budget?')" 
                            class="bg-red-500 hover:bg-red-600 text-white text-xs px-3 py-1 rounded">Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No budgets created yet.</p>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
